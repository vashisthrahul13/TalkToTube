{
  "manifest_version": 3,
  "name": "TalktoTube",
  "version": "1.0",
  "description": "Ask questions about YouTube videos",
  "permissions": ["scripting", "activeTab", "tabs"],
  "host_permissions": ["https://*.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
